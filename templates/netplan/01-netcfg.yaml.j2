# {{ ansible_managed }}
# This file describes the network interfaces available on your system
# For more information, see netplan(5).
network:
  version: 2
  renderer: networkd
  ethernets:
    eps0n:
      dhcp4: true
      optional: true
    eps1n:
      dhcp4: no
      dhcp6: no
      addresses: [{{ eps1n.address }}{{ eps1n.netmask }}]

  bridges:
    br0:
      dhcp4: no
      interfaces:
        - bond0
      addresses: [{{ br0.address }}{{ br0.netmask }}]
      gateway4: {{ br0.gateway }}
      nameservers:
        addresses: [{{ dns1 }},{{ dns2 }}]
